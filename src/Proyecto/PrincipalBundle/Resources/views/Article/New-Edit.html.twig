{% extends "ProyectoPrincipalBundle:Helpers2:baseInterna.html.twig" %}

{%block js%} 
{%endblock%}
{%block contents%} 
<td id="contents"><!-- whole contents -->
<div id="sf_admin_container">
	<h1>{{menu.subseccion}}</h1>
	<div id="sf_admin_header"></div>
	<div id="sf_admin_content">
		<form action="{{ url }}" method="post" {{ form_enctype(form) }}>
			<input type="hidden" name="page_id" id="page_id" value="">
			<fieldset id="sf_fieldset_none" class="">
				<div class="form-row">
					<label for="page_category" class="required">Categoria:</label>
					<div class="content">
						{{ form_widget(form.category, { 'attr': {'class': 'theme_toggle'}} ) }}
					</div>
				</div>
				<div class="form-row">
					<label for="page_title" class="required">Nombre:</label>
					<div class="content">
						{{ form_widget(form.name, { 'attr': {'size': '80'} }) }}
					</div>
				</div>
				<div class="form-row">
					<label for="page_keywords" class="required">Palabras Clave [metatag]:</label>
					<div class="content">
						{{ form_widget(form.keywords, { 'attr': {'size': '80'} }) }}
					</div>
				</div>
				<div class="form-row">
					<label for="page_description_meta" class="required">Descripci√≥n:</label>
					<div class="content">
						{{ form_widget(form.description, { 'attr': {'size': '80'} }) }}
					</div>
				</div>
				<div class="form-row">
					<label for="page_content" class="required">Contenido:</label>
					<div class="content">
						<input type="hidden" id="page[content]" name="page[content]" value="{{contenido}}" style="display:none">
						
						<input type="hidden" id="page[content]___Config" value="" style="display:none">
						<iframe id="page[content]___Frame" src="{{asset('js/fckeditor/editor/fckeditor.html?InstanceName=page[content]&amp;Toolbar=Default')}}" width="100%" height="500" frameborder="0" scrolling="no" style="margin: 0px; padding: 0px; border: 0px; background-color: transparent; background-image: none; width: 100%; height: 500px;"></iframe>
					</div>
				</div>
				<div class="form-row">
					<label for="page_pdf" >Archivo:</label>
					<div class="content">
						{{ form_widget(form.file, { 'attr': {'size': '64'} }) }}
						<br>
					</div>
				</div>
				<div class="form-row">
					<label for="page_background_id" class="required">FONDO:</label>
					<div class="content">
						{{ form_widget(form.background) }}
					</div>
				</div>
				<div class="form-row">
					<label for="page_media_id" class="required">Imagen:</label>
					<div class="content">
						{{ form_widget(form.media, { 'attr': {'class': 'photo_toggle'} }) }}
						<div class="media_container">
							{%for object in media%}
							<div class="media_{{object.mediaId}}" style="display: none;">
								<img alt="{{object.friendlyName}}" src="{{asset('uploads/media/mini/'~ object.fileNameMini ~'')}}" style="height: 100px;width: 106px;">
							</div>
							{%endfor%}
						</div>
					</div>
				</div>
				<div class="form-row">
					<label for="page_theme_id" class="required">Tema:</label>
					<div class="content">
						{{ form_widget(form.theme, { 'attr': {'class': 'theme_toggle'} }) }}
						<div class="theme_container">
							{%for object in themes%}
							<div class="theme_{{object.themeId}}" style="background-color: {{object.color}}; display: none;height: 100px;width: 106px;"></div>
							{%endfor%}
						</div>
					</div>
				</div>
				<div class="form-row">
					<label for="page_published">Publicado:</label>
					<div class="content">
						{{ form_widget(form.published, { 'attr': {'checked': 'checked'} }) }}
					</div>
				</div>
			</fieldset>
			<ul class="sf_admin_actions">
				<li>
					<input class="sf_admin_action_list" value="Listado" type="button" onclick="document.location.href='{{path('proyecto_principal_article_list',   {'type': 'news'})}}';">
				</li>
				<li>
					<input type="submit" name="save" value="{%if accion == 'nuevo'%}Guardar{%else%}Actualizar{%endif%}">
				</li>
			</ul>
		</form>
		<ul class="sf_admin_actions"></ul>
	</div>
	<div id="sf_admin_footer"></div>
</div><!-- end whole contents --></td>
{%endblock%}