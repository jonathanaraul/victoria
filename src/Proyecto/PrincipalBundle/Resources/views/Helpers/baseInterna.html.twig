				<td class="submenu_button"><a class="menu" href="{{path('proyecto_principal_user_edit')}}">{% trans %}Editar Perfil{% endtrans %}</a></td>
				<td class="submenu_button"><a class="menu" href="{{path('proyecto_principal_user_new')}}">{% trans %}Crear Usuario{% endtrans %}</a></td>
				{%elseif menu.seccion == 'PAGINAS'%}
				<td class="submenu_button"><a class="menu" href="{{path('proyecto_principal_page_list')}}">{% trans %}Mostrar páginas{% endtrans %}</a></td>
				<td class="submenu_button"><a class="menu" href="{{path('proyecto_principal_page_rank')}}">{% trans %}Determinar el orden{% endtrans %}</a></td>
				<td class="submenu_button"><a class="menu" href="{{path('proyecto_principal_page_create')}}">{% trans %}Añadir página{% endtrans %}</a></td>
				{%elseif menu.seccion == 'ARTICULOS'%}
				<td class="submenu_button"><a class="menu" href="{{path('proyecto_principal_article_list',   {'type': 'news'})}}">{% trans %}Mostrar Noticias{% endtrans %}</a></td>
				<td class="submenu_button"><a class="menu" href="{{path('proyecto_principal_article_create', {'type': 'news'})}}">{% trans %}Añadir Noticia{% endtrans %}</a></td>
