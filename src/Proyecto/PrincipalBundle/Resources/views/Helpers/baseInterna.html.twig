				<td class="submenu_button"><a class="menu" href="{{path('proyecto_principal_link_create')}}">{% trans %}Añadir Enlace{% endtrans %}</a></td>
				{%elseif menu.seccion == 'SETTING'%}
				<td class="submenu_button"><a class="menu" href="{{path('proyecto_principal_setting_list')}}">{% trans %}Mostrar Opciones{% endtrans %}</a></td>
				{%elseif menu.seccion == 'RESERVATION'%}
				<td class="submenu_button"><a class="menu" href="{{path('proyecto_principal_reservation_list')}}">{% trans %}Mostrar Reservas{% endtrans %}</a></td>
				{%endif%}
