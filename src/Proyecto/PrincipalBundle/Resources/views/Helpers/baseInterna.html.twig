				<td class="submenu_button"><a class="menu" href="{{path('proyecto_principal_article_create', {'type': 'events'})}}">{% trans %}Añadir Espéctaculo{% endtrans %}</a></td>
				<td class="submenu_button"><a class="menu" href="{{path('proyecto_principal_article_list',   {'type': 'programs'})}}">{% trans %}Mostrar Talleres{% endtrans %}</a></td>
				<td class="submenu_button"><a class="menu" href="{{path('proyecto_principal_article_create', {'type': 'programs'})}}">{% trans %}Añadir Taller{% endtrans %}</a></td>
				{%elseif menu.seccion == 'RECURSOS'%}
				<td class="submenu_button"><a class="menu" href="{{path('proyecto_principal_resource_list',   {'type': 'images'})}}">{% trans %}Mostrar Imágenes{% endtrans %}</a></td>
				<td class="submenu_button"><a class="menu" href="{{path('proyecto_principal_resource_create', {'type': 'images'})}}">{% trans %}Añadir Imagen{% endtrans %}</a></td>
				<td class="submenu_button"><a class="menu" href="{{path('proyecto_principal_resource_list',   {'type': 'backgrounds'})}}">{% trans %}Mostrar Fondos{% endtrans %}</a></td>
				<td class="submenu_button"><a class="menu" href="{{path('proyecto_principal_resource_create', {'type': 'backgrounds'})}}">{% trans %}Añadir Fondo{% endtrans %}</a></td>
				{%elseif menu.seccion == 'LINKS'%}
