{% extends "ProyectoPrincipalBundle:Helpers:base.html.twig" %}
{%block info%}
{%if objects|length == 0%}
{%set info = 'No se encontraron registros en el sistema'%}
{%endif%}
{% include 'ProyectoPrincipalBundle:Helpers:info.html.twig' with {'info': info} %}

{%endblock%}
{%block scripts%}
<script type="text/javascript">
	var eliminarObjeto = '{{path('proyecto_principal_elimina_objeto')}}';
	var modificarObjeto = '{{path('proyecto_principal_modifica_objeto')}}';
</script>
{%endblock%}

{%block contenido%}
{%if objects|length > 0%}
<div class="row-fluid">
	<!--<h3 class="header smaller lighter blue">Estudios</h3> -->
	<div class="table-header">
		Registros encontrados en el sistema
	</div>
	<div id="sample-table-2_wrapper" class="dataTables_wrapper" role="grid">
		<div class="row-fluid">
			<div class="span6">
				<!--<div id="sample-table-2_length" class="dataTables_length">
				<label>Desplegar
				<select size="1" name="sample-table-2_length" aria-controls="sample-table-2">
				<option value="10" selected="selected">10</option><option value="25">25</option><option value="50">50</option><option value="100">100</option>
				</select> estudios</label>
				</div> -->
			</div>
			<div class="span6">
				<!--
				<div class="dataTables_filter" id="sample-table-2_filter">
				<label>Buscar:
				<input type="text" aria-controls="sample-table-2">
				</label>
				</div> -->
			</div>
		</div>
		<table id="sample-table-2" class="table table-striped table-bordered table-hover dataTable" aria-describedby="sample-table-2_info">
			<thead>
				<tr role="row">
					<th class="" role="columnheader" tabindex="0" aria-controls="sample-table-2" rowspan="1" colspan="1" aria-label="" style="width: 168px;">Nombre</th>
					<th class="hidden-480 " role="columnheader" tabindex="0" aria-controls="sample-table-2" rowspan="1" colspan="1" aria-label="" style="width: 132px;">Email</th>
					<th class="" role="columnheader" tabindex="0" aria-controls="sample-table-2" rowspan="1" colspan="1" aria-label="" style="width: 121px;">Categoria</th>
					
					<th class="hidden-phone " role="columnheader" tabindex="0" aria-controls="sample-table-2" rowspan="1" colspan="1" aria-label="

					Update
					: activate to sort column ascending" style="width: 197px;"> Fecha </th>
					<th class="sorting_disabled" role="columnheader" rowspan="1" colspan="1" aria-label="" style="width: 161px;">Leer/Responder</th>
					<th class="sorting_disabled" role="columnheader" rowspan="1" colspan="1" aria-label="" style="width: 161px;">Leido/Respondido</th>
				</tr>
			</thead>
			<tbody role="alert" aria-live="polite" aria-relevant="all">
				{%for object in objects%}
				<tr class="{%if loop.index % 2 == 0%}odd{%else%}even{%endif%}">
					<td class=" "><a href="#">{{object.nombre|title}}</a></td>
					
					<td class="hidden-480 ">{{object.email|title}}</td>
					<td class=" ">{{object.categoria|title}}</td>
					<td class="hidden-phone ">{{object.fecha.format('d/m/Y H:i:s')}}</td>
					<td class="td-actions ">
					<div class="hidden-phone visible-desktop action-buttons" >
						<a class="blue" href="javascript:void(0)" onclick="document.location.href = '{{ path('proyecto_principal_correo_entrada', {'id': object.getId}) }}'"> <i class="icon-exchange bigger-130"></i> </a>
					</div>
					<div class="hidden-desktop visible-phone">
						<div class="inline position-relative">
							<button class="btn btn-minier btn-yellow dropdown-toggle" data-toggle="dropdown">
								<i class="icon-caret-down icon-only bigger-120"></i>
							</button>
							<ul class="dropdown-menu dropdown-icon-only dropdown-yellow pull-right dropdown-caret dropdown-close">
								<li>
									<a href="#" class="tooltip-info" data-rel="tooltip" title="" data-original-title="View"> <span class="blue"> <i class="icon-ok bigger-120"></i> </span> </a>
								</li>
							</ul>
						</div>
					</div>
					</td>
					<td class="td-actions ">
					<div class="hidden-phone visible-desktop action-buttons" codigo="{{object.id}}">
						<a class="{%if object.leido== 1%}green{%else%}red{%endif%}" href="javascript:void(0)"> <i class=" icon-check{%if object.leido== 0%}-empty{%endif%} bigger-130"></i> </a>
						<a class="{%if object.respondido== 1%}green{%else%}red{%endif%}" href="javascript:void(0)"> <i class="icon-check{%if object.respondido== 0%}-empty{%endif%} bigger-130"></i> </a>
					</div>
					<div class="hidden-desktop visible-phone">
						<div class="inline position-relative">
							<button class="btn btn-minier btn-yellow dropdown-toggle" data-toggle="dropdown">
								<i class="icon-caret-down icon-only bigger-120"></i>
							</button>
							<ul class="dropdown-menu dropdown-icon-only dropdown-yellow pull-right dropdown-caret dropdown-close">

						
								<li>
									<a href="#" class="tooltip-success" data-rel="tooltip" title="" data-original-title="Edit"> <span class="green"> <i class="icon-edit bigger-120"></i> </span> </a>
								</li>
								<li>
									<a href="#" class="tooltip-error" data-rel="tooltip" title="" data-original-title="Delete"> <span class="red"> <i class="icon-trash bigger-120"></i> </span> </a>
								</li>
							</ul>
						</div>
					</div>
					</td>
				</tr>
				{%endfor%}
			</tbody>
		</table>
		<div class="row-fluid">
			<div class="span6">
				<div class="dataTables_info" id="sample-table-2_info">
					Mostrando del 1 al {{objects|length}} de {{objects|length}} registros
				</div>
			</div>
			<div class="span6">
				<!--
				<div class="dataTables_paginate paging_bootstrap pagination">
				<ul>
				<li class="prev disabled">
				<a href="#"><i class="icon-double-angle-left"></i></a>
				</li>
