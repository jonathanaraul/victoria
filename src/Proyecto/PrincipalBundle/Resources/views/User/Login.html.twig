{% extends "ProyectoPrincipalBundle:Helpers:base.html.twig" %}

{%block contents%} <td id="contents" style="height: 495px;"><!-- whole contents -->
<form method="post" action="{{ path('login_check') }}">
	<table cellpadding="0" cellspacing="0" class="mytable">
		<tbody>
			<tr>
				<th colspan="2">Iniciar Sesión</th>
			</tr>
			{% if error %}
			<tr>
				<td colspan="2">
				<p>
					No puede acceder al sistema, intente m&aacute;s tarde, o comun&iacute;quese con el administrador del sistema.
				</p></td>
			</tr>
			{%endif%}
			<tr>
				<td class="td_label"><label for="login" class="labelLogin">Inicia Sesión:</label></td>
				<td><!--<div style="display:none;" class="form_error" id="error_for_login">
				↓&nbsp; &nbsp;↓
				</div>-->
				<input type="text" name="_username"  value="{{ ultimo_nombreusuario}}" id="login" value="">
				</td>
			</tr>
			<tr>
				<td colspan="2" class="form_line"><div class="linebg"></div></td>
			</tr>
			<tr>
				<td class="td_label"><label for="password" class="labelLogin">Clave:</label></td>
				<td><!--<div style="display:none;" class="form_error" id="error_for_password">
				↓&nbsp; &nbsp;↓
				</div>-->
				<input type="password" name="_password" id="password" value="">
				</td>
			</tr>
		</tbody>
	</table>
	<ul class="cms_action_ul">
		<li class="cms_action_li">
			<span class="cms_action_span">
				<input type="submit" name="commit" value="Iniciar Sesión" class="cms_action_submit">
			</span>
		</li>
	</ul>
</form><!-- end whole contents --></td>
{%endblock%}