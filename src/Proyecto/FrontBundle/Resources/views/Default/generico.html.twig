{%if articles is not null%}
	{%for element in articles %}
		<tr class="articulos borrar">
			<td width="20%" valign="top" class="imagen-ocultar">
				<img alt="" src="{%if  images[loop.index0] is not null%}{{ images[loop.index0].getWebPath | apply_filter('my_thumb') }}{%endif%}">
			</td>
			<td width="20%" valign="top" class="noticias-ocultar"><b>{{element.getDate.format('h:i A')}}</b></td>
			<td width="60%"  valign="top" class="noticias-columna">
					<div>
							<b>{{element.article.name}}</b>
					</div>
					<div class="noticias-mostrar">
						<b>{{element.getDate.format('h:i A')}}</b>
					</div>
					<div>
						<img class="imagen-mostrar" alt="" src="{%if  images[loop.index0] is not null%}{{ images[loop.index0].getWebPath | apply_filter('my_thumb') }}{%endif%}" align="left" style="padding-right: 8px;">
							{{element.article.content|raw}}
					</div> 	
					<div>
							<b>{{element.article.gender}}</b>
					</div> 
					<div style="">
						<span style="text-align: left;">
							<b><a href="{{ path('proyecto_front_reservation', {'id': element.article.id}) }}" style="color: black;">{% trans %}Reserva ahora{% endtrans %}</a></b>
						</span>
						&nbsp;&nbsp;&nbsp;&nbsp;
						<span style="text-align: right;">
							<b><a href="{{ path('proyecto_front_article', {'id': element.article.id}) }}" style="color: black;">{% trans %}Leer m√°s...{% endtrans %}</a></b>
						</span>
					</div>
			</td>
		</tr>
	{%endfor%}
	<tr id="fila-loader">
		<td colspan="3" style="height: 350px;width:563px;display: none" id="loader">
			<p style="text-align: center;"><img src="{{asset('loader.gif')}}" ></p>
		</td>
	</tr>
	{%if articles|length <1%}
	<tr id="fila-sin resultados" class="borrar">
		<td colspan="3" style="height: 350px;width:563px;" >
			<p style="text-align: center;"><img src="{{asset('sin-resultados.png')}}" class="imagen-loader"></p>
		</td>
	</tr>
	{%endif%}
{%endif%}
